<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Margin="5">Укажите имя</Label>
                <TextBox Name="tbName" Width="150" Margin="5"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Margin="5">Укажите пароль</Label>
                <TextBox Name="tbPass" Width="150" Margin="5"></TextBox>
            </StackPanel>

            <Button x:Name="btReg" Click="btReg_Click" Width="150" Margin="5">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Window>
